<%= content_for :metatags do %>

	<meta name="Description" content="<%= @post.excerpt %>">

  <meta property="og:locale" content="es_ES">
  <meta property="og:type" content="article">
  <meta property="og:title" content="<%= @post.title %>" />
  <meta property="og:url" content="http://www.manentail.cl<%= storytime.post_path(@post) %>" />
  <meta property="og:description" content="<%= @post.excerpt %>">
  <meta property="article:publisher" content="https://www.facebook.com/manentailoficial" />
  <meta property="og:image" content="<%= @post.featured_media.file.url %>" />
  <meta property="og:site_name" content="Mane 'n Tail Chile"/>
<% end %>
